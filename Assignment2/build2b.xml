<project default='run'>
	<target name='init' depends='clean'>
		<mkdir dir='../bin'/>
	</target>
	<target name='clean'>
		<delete dir='../bin'/>
	</target>
	<target name='compile' depends='init'>
		<javac srcdir='src'
			   destdir='../bin'
			   excludes='**/test/**.java'/>
	</target>
	<target name='jar' depends='compile'>
		<jar destfile='Assignment2B.jar'
			 basedir='../bin'
			 includes='**/*.class'/>
	</target>
	<target name='run' depends='jar'>
		<java classname='driver.JShell' fork='true'/>
		<classpath path='Assignment2B.jar'/>
	</target>
	<target name="junit">
	</target>
</project>